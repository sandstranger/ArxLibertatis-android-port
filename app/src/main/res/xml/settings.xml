<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory android:title="@string/general_settings">
        <Preference
            android:key="game_files"
            android:title="@string/game_files" />
        <ListPreference
            android:defaultValue="@string/text_localization_default_entry"
            android:dialogTitle="@string/text_localization_title"
            android:entries="@array/text_localization_entries"
            android:entryValues="@array/text_localization_entries"
            android:key="text_localization"
            android:summary="%s"
            android:title="@string/text_localization_title" />
        <ListPreference
            android:defaultValue="@string/text_localization_default_entry"
            android:dialogTitle="@string/audio_localization_title"
            android:entries="@array/audio_localization_entries"
            android:entryValues="@array/audio_localization_entries"
            android:key="audio_localization"
            android:summary="%s"
            android:title="@string/audio_localization_title" />
        <EditTextPreference
            android:key="command_line"
            android:title="@string/command_line"
            android:dialogTitle="@string/command_line"
            />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="internal_memory"
            android:title="@string/internal_memory" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/user_interface">
        <Preference
            android:key="screen_controls_settings"
            android:title="@string/configure_screen_controls" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="hide_screen_controls"
            android:title="@string/hide_screen_controls" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/graphics">
        <EditTextPreference
            android:dialogTitle="@string/custom_resolution"
            android:key="custom_resolution"
            android:title="@string/custom_resolution" />
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="display_cutout_area"
            android:title="@string/display_cutout_area" />
        <EditTextPreference
            android:dialogTitle="@string/hud_scaling"
            android:key="hud_scale"
            android:title="@string/hud_scaling" />
        <EditTextPreference
            android:dialogTitle="@string/cursor_scaling"
            android:key="cursor_scale"
            android:title="@string/cursor_scaling" />
        <EditTextPreference
            android:dialogTitle="@string/font_size"
            android:key="font_size"
            android:title="@string/font_size" />
    </PreferenceCategory>
</PreferenceScreen>